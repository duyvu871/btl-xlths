
{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "allowJs": true,
        "noEmit": false,
        "baseUrl": ".",
        "paths": {
            "fourier-transform-native": ["workers/fourier-transform-native"],
            "*": [
                "node_modules/",
                "src/constants/*"
            ]
        },
        "outDir": "dist",
        "importsNotUsedAsValues": "remove",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules",]
}